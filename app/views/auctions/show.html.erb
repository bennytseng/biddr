<div class = "auction-show">

  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= @auction.title %></span>
          <p><%= @auction.details %></p>
          <p>$<%= @auction.price %></p>
        </div>
        <div class="card-action">
          <%= form_for [@auction, @bid] do |f| %>
          <div>
            <%= f.label :price %>
            <%= f.text_field :price %>
          </div>
          <%= f.submit class: 'btn waves-effect waves-light' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>


  <h2>Bid History</h2>
  <% @auction.bids.each do |bid| %>
  <ul class = "collection">
    <li class = "collection-item">$<%= bid.price %> at <%= bid.created_at %> by <%= User.find_by_id(bid.user).username %></li>
  </ul>
  <% end %>

</div>
